import java.util.Scanner;

public class PigLatin {
	public static void main(String args[]) {
		Scanner keyboard = new Scanner(System.in);
		// One Word String
		String Str1;
		System.out.print("Type a word to be translated into Pig Latin below: " + "\n");
		Str1 = keyboard.nextLine();
		// Capitalization help from https://introcs.cs.princeton.edu/java/31datatype/Capitalize.java.html not sure if I need to include this
		System.out.println("Your new word is: " + Str1.substring(1, 2).toUpperCase() + Str1.substring(2).toLowerCase() + Str1.substring(0, 1).toLowerCase() + "ay");
	}

}

